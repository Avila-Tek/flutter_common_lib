  development-android:
    name: "[DEV] Android only"
    max_build_duration: 60
    environment:
      flutter: {{flutter_version}}
      android_signing:
        - avilatek_upload_ks
      groups:
        - play_store_credentials
        - firebase_credentials
        - development
        - all

    cache:
      cache_paths:
        - $HOME/.gradle/caches
        - $FLUTTER_ROOT/.pub-cache

    triggering:
      events:
        - tag
      tag_patterns:
        - pattern: 'v*.*.*\+*-(?:dev|development)-android'
          include: true
      cancel_previous_builds: false

    scripts:
      - name: Set up .env file # TODO: !Declare all .env variables in the script. DO NOT WRITE DOWN ENV VARIABLES DIRECTLY ON THIS FILE. USE CODEMAGIC SECRETS!
        script: |
          cat >> ".env" <<EOF
          DEV_API_URL=$DEV_API_URL
          MY_SECRET_KEY=$MY_SECRET_KEY_EXAMPLE
          EOF
      - name: Get Flutter packages
        script: |
          flutter packages pub get

      - name: Set up local.properties
        script: |
          echo "flutter.sdk=$HOME/programs/flutter" > "$CM_BUILD_DIR/android/local.properties"
      - name: Set up key.properties
        script: |
          cat >> "$CM_BUILD_DIR/android/key.properties" <<EOF
          storePassword=$CM_KEYSTORE_PASSWORD
          keyPassword=$CM_KEY_PASSWORD
          keyAlias=$CM_KEY_ALIAS
          storeFile=$CM_KEYSTORE_PATH
          EOF
      - name: Build APK with Flutter # NOTE: Update target path and flavor if the project does not follow conventional structure.
        script: |
          flutter build apk --release --flavor development --target {{{development_main_path}}}

    artifacts:
      - build/ios/ipa/*.ipa
      - /tmp/xcodebuild_logs/*.log
      - build/**/outputs/**/*.aab
      - build/**/outputs/**/*.apk
      - build/**/outputs/**/mapping.txt
      - flutter_drive.log

    publishing:
      firebase:
        firebase_service_account: $FIREBASE_SERVICE_ACCOUNT_CREDENTIALS # NOTE: Remember to add this value to the project's secrets.
        android:
          app_id: $DEV_FIREBASE_APPLICATION_ID # NOTE: Remember to add this value to the project's secrets.
          artifact_type: apk
          {{#show_verifier_groups}}
          groups:
            {{#verifier_groups_firebase}}- {{.}}
            {{/verifier_groups_firebase}}
          {{/show_verifier_groups}}

      {{#show_email_recipients}}
      email:
        recipients:
          {{#email_recipients}}- {{.}}
          {{/email_recipients}}
      {{/show_email_recipients}}